<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="#e72d23"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:text="Food Recipe Login"
        android:fontFamily="cursive"
        android:textColor="#fff"
        android:textSize="38dp"
        android:textStyle="bold"
        android:shadowColor="#fff"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:textColor="#000"
        android:textSize="22dp"
        android:layout_marginTop="35dp"
        android:layout_marginHorizontal="50dp"
        android:paddingVertical="7sp"
        android:id="@+id/etusername"
        android:paddingLeft="10dp"
        android:textCursorDrawable="@null"
        android:background="@drawable/etfocus"
        android:drawableLeft="@drawable/ic_profilep"
        android:drawablePadding="10dp"


        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="22dp"
        android:layout_marginTop="35dp"
        android:layout_marginHorizontal="50dp"
        android:id="@+id/etpassword"
        android:paddingLeft="10dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:textCursorDrawable="@null"
        android:background="@drawable/etfocus"
        android:paddingVertical="7sp"
        android:drawableLeft="@drawable/ic_lock"
        android:drawablePadding="10dp"
        />

    <Button
        android:id="@+id/btlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:background="@drawable/button_background"
        android:text="Login"
        android:layout_marginTop="35dp"
        android:layout_marginHorizontal="50dp"
        android:textColor="#fff"


        />

    <Button
        android:id="@+id/btcancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:background="@drawable/button_background"
        android:text="Cancel"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="50dp"
        android:textColor="#fff"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No account yet? Signup Here"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tvgotosignup"
        />







</LinearLayout>